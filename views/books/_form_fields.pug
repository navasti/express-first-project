div
    label Title
        input(type="text" name="title" value=book.title)
div
    label Author
        select(name="author")
            each author in authors
                if author.id === book.author
                    option(selected label=author.name value=author.name)
                else
                    option(label=author.name value=author.name)
div
    label Page Count
        input(type="number" name="pageCount" min="1" value=book.pageCount)
div
    label Publish Date
        input(type="date" name="publishDate" value="#{book.publishDate === null ? '' : book.publishDate.toDateString()}")
div
    label Description
        textarea(name="description" value=book.description)
